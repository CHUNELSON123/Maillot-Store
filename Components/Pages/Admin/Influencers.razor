@page "/admin/influencers"
@using MaillotStore.Components.Layout
@using MaillotStore.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext DbContext
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime  
@layout AdminLayout
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Influencers</PageTitle>

<div class="influencer-container">
    <div class="influencer-header">
        <h1 class="influencer-list-title">Influencer List</h1>
    </div>

    <div class="influencer-table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Influencer Name</th>
                    <th>Phone Number</th>
                    <th>Sales</th>
                    <th>Commission Earned</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (pagedInfluencers != null && pagedInfluencers.Any())
                {
                    @foreach (var (influencer, index) in pagedInfluencers.Select((item, i) => (item, i)))
                    {
                        <tr>
                            <td>@((currentPage - 1) * pageSize + index + 1)</td>
                            <td>@influencer.FullName</td>
                            <td>@influencer.PhoneNumber</td>
                            <td>@influencer.SalesCount</td>
                            <td>FCFA @influencer.CommissionEarned.ToString("N0") XAF</td>
                            
                            @* --- START: UPDATED ACTION CELL --- *@
                            <td class="action-buttons" style="white-space: nowrap;">
                                <button class="view-btn" @onclick="() => ViewInfluencer(influencer.Id)">View</button>
                                <button class="btn btn-danger ms-2" @onclick="() => DeleteInfluencer(influencer.Id, influencer.FullName)">Delete</button>
                            </td>
                            @* --- END: UPDATED ACTION CELL --- *@
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No influencers found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* --- PAGINATION --- *@
    <div class="pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            var pageNumber = i;
            <button class="@(pageNumber == currentPage ? "active" : "")" @onclick="() => ChangePage(pageNumber)">@pageNumber</button>
        }
    </div>
</div>

@code {
    private List<InfluencerViewModel> allInfluencers = new();
    private List<InfluencerViewModel> pagedInfluencers = new();
    private int currentPage = 1;
    private int pageSize = 20;
    private int totalPages;

    protected override async Task OnInitializedAsync()
    {
        await LoadInfluencers();
    }

    private async Task LoadInfluencers()
    {
        allInfluencers.Clear();
        var influencerUsers = await UserManager.GetUsersInRoleAsync("Influencer");

        foreach (var user in influencerUsers.OrderBy(u => u.FullName))
        {
            var orders = await DbContext.Orders
                .Where(o => o.ReferralCode == user.ReferralCode)
                .ToListAsync();

            // --- START: UPDATED COMMISSION LOGIC ---
            // Correctly sum the commission that was already calculated and saved with each order
            var commission = orders.Sum(o => o.CommissionAmount);
            // --- END: UPDATED COMMISSION LOGIC ---

            allInfluencers.Add(new InfluencerViewModel
            {
                Id = user.Id,
                FullName = user.FullName,
                PhoneNumber = user.PhoneNumber,
                SalesCount = orders.Count,
                CommissionEarned = commission
            });
        }

        totalPages = (int)Math.Ceiling(allInfluencers.Count / (double)pageSize);
        UpdatePagedInfluencers();
    }

    private void UpdatePagedInfluencers()
    {
        pagedInfluencers = allInfluencers
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToList();
    }

    private void ChangePage(int pageNumber)
    {
        if (pageNumber < 1 || pageNumber > totalPages)
        {
            return;
        }
        currentPage = pageNumber;
        UpdatePagedInfluencers();
    }

    private void ViewInfluencer(string influencerId)
    {
        NavigationManager.NavigateTo($"/admin/view-influencer/{influencerId}");
    }

    // --- START: UPDATED DELETE METHOD ---
    private async Task DeleteInfluencer(string influencerId, string influencerName)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete {influencerName}? This will remove all their associated commissions and referrals. This action is permanent.");

        if (confirmed)
        {
            var user = await UserManager.FindByIdAsync(influencerId);
            if (user != null)
            {
                // Step 1: Disassociate all related commissions/orders
                if (!string.IsNullOrEmpty(user.ReferralCode))
                {
                    // Find all orders associated with this influencer
                    var associatedOrders = await DbContext.Orders
                        .Where(o => o.ReferralCode == user.ReferralCode)
                        .ToListAsync();

                    if (associatedOrders.Any())
                    {
                        // "Delete" the commission data from these orders
                        foreach (var order in associatedOrders)
                        {
                            order.ReferralCode = null;
                            order.CommissionAmount = 0;
                        }
                        await DbContext.SaveChangesAsync(); // Save changes to the orders
                    }
                }

                // Step 2: Delete the user account
                var result = await UserManager.DeleteAsync(user);
                
                if (result.Succeeded)
                {
                    await LoadInfluencers(); // Reload the list
                    StateHasChanged();
                }
                else
                {
                    // Handle errors
                    await JSRuntime.InvokeVoidAsync("alert", $"Error deleting influencer: {string.Join(", ", result.Errors.Select(e => e.Description))}");
                }
            }
        }
    }
    // --- END: UPDATED DELETE METHOD ---

    public class InfluencerViewModel
    {
        public string Id { get; set; }
        public string? FullName { get; set; }
        public string? PhoneNumber { get; set; }
        public int SalesCount { get; set; }
        public decimal CommissionEarned { get; set; }
    }
}